<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ide='urn:import:org.eclipse.che.ide.ui'>
    <ui:with field='coreLocale' type='org.eclipse.che.ide.CoreLocalizationConstant'/>
    <ui:with field='locale' type='org.eclipse.che.plugin.composer.ide.ComposerLocalizationConstants'/>
    <ui:with field="style" type="org.eclipse.che.plugin.composer.ide.importer.ComposerImporterPageViewImpl.Style"/>
    <g:DockLayoutPanel unit="PX" addStyleNames="{style.mainPanel}">
        <g:north size="400">
            <g:FlowPanel ui:field="importerPanel">
                <g:FlowPanel height="65px" addStyleNames="{style.namePanel}">
                    <g:Label text="{locale.projectImporterPackageName}"
                             addStyleNames="{style.labelPosition}"/>
                    <ide:TextBox ui:field="packageName" addStyleNames="{style.inputField} {style.alignRight}" tabIndex="3"
                               debugId="file-importProject-packageName"/>
                    <g:Label ui:field="labelPackageNameError" width="100%" wordWrap="true" addStyleNames="{style.labelErrorPosition}"/>
                </g:FlowPanel>
                <g:FlowPanel height="0" addStyleNames="{style.horizontalLine}"/>
                <g:FlowPanel height="30px" addStyleNames="{style.namePanel}">
                    <g:Label text="{coreLocale.importProjectInfo}" addStyleNames="{style.label}"/>
                </g:FlowPanel>
                <g:FlowPanel height="50px" addStyleNames="{style.namePanel}">
                    <g:Label text="{coreLocale.createProjectFromTemplateName}"
                             addStyleNames="{style.labelPosition}"/>
                    <ide:TextBox ui:field="projectName" addStyleNames="{style.inputField} {style.alignRight}"
                               tabIndex="4"
                               debugId="file-importProject-projectName" title="{coreLocale.importProjectNamePrompt}"/>
                </g:FlowPanel>
                <g:FlowPanel height="80px" addStyleNames="{style.namePanel}">
                    <g:Label text="{coreLocale.createProjectFromTemplateDescription}"
                             addStyleNames="{style.labelPosition}"/>
                    <g:TextArea height="40px" ui:field="projectDescription" addStyleNames="{style.inputField} {style.alignRight}"
                                debugId="file-importProject-projectDescription" title="{coreLocale.importProjectDescriptionPrompt}"
                                tabIndex="5"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
