.edit-machine-form
  width 600px
  min-height 350px

  .form-input-fields
    max-width 600px
    margin-top 20px
    span
      line-height 20px
    & > div:first-child span
      line-height 37px
    & > div:last-child span
      line-height 25px

    .che-input
      min-height 50px

    .ram-slider
      margin-bottom 5px

      .che-ram-allocation-slider
        width 100%
        max-width 100%

        .slider-actual-ram-caption,
        .slider-max-ram-caption,
        .md-input-has-value
          width 50px

          *
            width inherit
            white-space nowrap

    .che-label-description
      color $disabled-color
      font-size 10px
      margin-top 5px

    .che-monaco-editor
      min-height 285px

    .recipe-errors-container
      color $error-color
      min-height 25px

  che-button-primary, che-button-notice
    float right

    button
      margin-right 0
      margin-bottom 0
