      position relative
      top 0
      left 0
      z-index 1

    .box-front-sides
      z-index 50

    .box-left-back-side
      width $box-side-width
      height $box-side-height
      position absolute
      top 0
      left 0
      box-sizing border-box
      border 1px solid black
      border-right none
      background-color darkslategrey
      transform-origin top left
      transform skewY(-($angle))

    .box-right-back-side
      width $box-side-width
      height $box-side-height
      position absolute
      top 0
      left $box-side-width
      box-sizing border-box
      border 1px solid black
      background-color darkslategrey
      transform-origin top right
      transform skewY($angle)

    .box-left-front-side
      width $box-side-width
      height $box-side-height
      position absolute
      top 0
      left 0
      box-sizing border-box
      border 1px solid black
      border-right none
      background-color gray
      transform-origin top left
      transform skewY($angle)

    .box-right-front-side
      width $box-side-width
      height $box-side-height
      position absolute
      top 0
      left $box-side-width
      box-sizing border-box
      border 1px solid black
      background-color gray
      transform-origin top right
      transform skewY(-($angle))

// .box

for $index, $layer-props in $layers-hash
  $layer-side-length = $layer-props['layer-side-length']
  $backgr-color = $layer-props['background-color']
  $_border-color = $layer-props['border-color']
  $offset = $layer-props['offset']

  $layer-upper-side-length = round($layer-side-length / trig('cos', $angle))
  $layer-upper-side-projection-vert = round($layer-upper-side-length * trig('sin', $angle))

  /* LAYER'S FRONT ROPE */
  $layer-rope-height = $layer-offset-top - ($offset * $layer-height)
  $layer-rope-front-height = $layer-rope-height + $layer-upper-side-projection-vert

