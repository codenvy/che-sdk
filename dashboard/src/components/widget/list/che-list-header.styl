.che-list-header
  margin 0

.che-list-header-additional
  display block
  width 100%
  float left
  padding 0 40px 15px 52px

  .che-list-add-button *,
  .che-list-delete-button *
    font-size 12px
    font-weight bold
    text-transform none
    color $list-header-button-color

  .che-list-add-button
    float left
    display inline-flex

  .che-list-delete-button
    float right
    display inline-flex

.che-list-add-button > *,
.che-list-delete-button > *
  display inline-block
  box-sizing content-box
  min-width 34px
  min-height 34px
  line-height 33px
  margin-top 15px
  margin-bottom 0
  border 1px solid $list-header-blue-color
  che-border-radius(2px)

.che-list-add-button > *
  margin-left 0
  margin-right 20px

.che-list-delete-button > *
  margin-left 20px
  margin-right 0

.che-list-add-button > *:hover,
.che-list-delete-button > *:hover
  border 1px solid $list-header-button-hover-color
  background-color $list-header-button-hover-color !important

.che-list-add-button > *,
.che-list-delete-button > *
  width auto
  padding-left 20px
  padding-right 20px
  background-color $list-header-blue-color
  box-shadow none !important

.che-list-header md-item
  border-top 1px solid $list-separator-color
  display inline-block
  width 100%
  float left

.che-list-header-content
  width 100%

.che-list-header-content > *
  border-bottom 1px solid $list-separator-color
  margin 0 40px 0 40px

.che-list-header-content *
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

  .che-list-item-checkbox-main
    display inline-block

.che-list-search-input
  float right
  width 150px
  overflow hidden

  display inline-block
  box-sizing content-box
  min-height 30px !important
  height 30px !important
  margin-top 15px !important
  margin-bottom 0
  box-shadow none !important
  border-color $list-header-blue-color !important

  .search-icon i:before
    color $primary-color

  .search-input input::-webkit-input-placeholder
    color $list-header-blue-color !important

  .search-input input::-moz-placeholder
    color $list-header-blue-color !important
